generator client {
  provider = "prisma-client-py"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  receipts  Receipt[]

  @@map("users")
}

model Receipt {
  id        String   @id @default(cuid())
  date      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  time      String
  total     String
  imageData String?
  userId    String
  items     Item[]
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("receipts")
}

model Item {
  id        String  @id @default(cuid())
  name      String
  price     String
  receiptId String
  quantity  String
  receipt   Receipt @relation(fields: [receiptId], references: [id], onDelete: Cascade)

  @@map("items")
}
